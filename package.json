{
  "name": "lightweight-config-parser",
  "version": "1.0.0",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "description": "Lightweigt configuration parser",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "test": "yarn jest --runInBand --forceExit",
    "build": "tsc",
    "format": "prettier --write \"src/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "start": "ts-node ./src/index.ts",
    "prepare": "yarn run build",
    "prepublishOnly": "yarn test && yarn run lint",
    "preversion": "yarn run lint",
    "version": "yarn run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": "https://github.com/novotny-adam/config-parser.git",
  "author": "Adam Novotn√Ω <novotny.adam@protonmail.com>",
  "license": "MIT",
  "keywords": [
    "configuration",
    "parser"
  ],
  "homepage": "https://github.com/novotny-adam/config-parser#readme",
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.11.18",
    "@types/rewire": "^2.5.28",
    "fs": "^0.0.1-security",
    "jest": "^29.4.1",
    "lodash": "^4.17.21",
    "path": "^0.12.7",
    "prettier": "^2.8.3",
    "rewire": "^6.0.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.9.4"
  }
}
